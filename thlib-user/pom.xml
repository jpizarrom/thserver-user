	<groupId>com.jpizarro.th</groupId>
	<artifactId>thlib-user</artifactId>
	<packaging>jar</packaging>
	<version>1.0-SNAPSHOT</version>
	<!-- TODO project name  -->
	<name>thlib-user</name>
